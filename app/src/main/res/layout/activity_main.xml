<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/light_blue">

    <!-- Expense Section -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="@string/budget_tracker"
        android:textColor="@color/black"
        android:layout_marginVertical="50dp"
        android:gravity="center"
        android:padding="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/cardview_background_for_expense">
            <EditText
                android:id="@+id/expenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/expense_amount"
                android:textColor="@color/white"
                android:padding="10dp"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/expenseDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/expense_description"
                android:textColor="@color/white"
                android:padding="10dp"
                android:inputType="text"
                android:autofillHints=""
                />
            <Button
                android:id="@+id/addExpenseButton"
                android:layout_width="match_parent"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_height= "wrap_content"
                android:text="@string/add_expense"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="2dp"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="25dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <!-- Income Section -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="25dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/cardview_background_for_expense">
            <EditText
                android:id="@+id/incomeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/income_amount"
                android:textColor="@color/white"
                android:padding="10dp"
                android:inputType="numberDecimal"
                android:autofillHints=""
                />

            <EditText
                android:id="@+id/incomeDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:hint="@string/income_description"
                android:textColor="@color/white"
                android:padding="10dp"
                android:inputType="text" />


            <Button
                android:id="@+id/addIncomeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:text="@string/add_income"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginVertical="7dp"
                android:layout_marginHorizontal="25dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="25dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/balanceTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:textColor="@color/white"
            android:text="@string/remaining_balance"
            android:textSize="18sp"

            android:background="#5200E3"
            android:clickable="true"
            android:padding="15dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="12dp"
        android:layout_marginVertical="25dp"
        app:cardElevation="4dp">

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/cardview_background">

            <Button
                android:id="@+id/show_all_expenses"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="@string/show_all_expenses"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/show_all_income"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_height="wrap_content"
                android:text="@string/show_all_incomes"
                android:layout_margin="10dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
